{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "cctop",
  "title": "Cctop - AI Session Monitor",
  "description": "Monitor and jump to AI coding sessions (Claude Code, opencode)",
  "icon": "extension-icon.png",
  "author": "st0012",
  "categories": ["Developer Tools"],
  "license": "MIT",
  "commands": [
    {
      "name": "show-sessions",
      "title": "Show Sessions",
      "description": "View all active AI coding sessions",
      "mode": "view",
      "keywords": ["session", "claude", "opencode", "ai", "coding", "monitor", "cctop"]
    }
  ],
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "lint": "ray lint"
  },
  "dependencies": {
    "@raycast/api": "^1.87.0",
    "@raycast/utils": "^1.18.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "~22.13.0",
    "typescript": "^5.4.0"
  }
}
